void PrintCircle(ConsoleColor activeColor)
{
    Console.Write("|");
    Console.ForegroundColor = (activeColor == ConsoleColor.Red) ? ConsoleColor.Red : ConsoleColor.Gray;
    Console.Write("0");
    Console.ResetColor();
    Console.WriteLine("|");

    Console.Write("|");
    Console.ForegroundColor = (activeColor == ConsoleColor.Yellow) ? ConsoleColor.Yellow : ConsoleColor.Gray;
    Console.Write("0");
    Console.ResetColor();
    Console.WriteLine("|");

    Console.Write("|");
    Console.ForegroundColor = (activeColor == ConsoleColor.Green) ? ConsoleColor.Green : ConsoleColor.Gray;
    Console.Write("0");
    Console.ResetColor();
    Console.WriteLine("|");
}

while (true)
{
    Console.WriteLine("+-+");
    PrintCircle(ConsoleColor.Red);
    Console.WriteLine("+-+");
    Console.WriteLine(" |");
    Console.WriteLine(" |");
    Thread.Sleep(700);
    Console.Clear();

    Console.WriteLine("+-+");
    PrintCircle(ConsoleColor.Yellow);
    Console.WriteLine("+-+");
    Console.WriteLine(" |");
    Console.WriteLine(" |");
    Thread.Sleep(700);
    Console.Clear();

    Console.WriteLine("+-+");
    PrintCircle(ConsoleColor.Green);
    Console.WriteLine("+-+");
    Console.WriteLine(" |");
    Console.WriteLine(" |");
    Thread.Sleep(700);
    Console.Clear();
}
